<h1>Create ClothesShop</h1>
<hr />
<div class="row">
   <div class="col-md-4">
       <form action="/ClothesShop/Create" method="post">
           <div class="form-group mb-3">
                <label class="control-label" for="Brand">Brand</label>
                <input class="form-control" type="text" id="Brand" name="Brand">
           </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Description">Description</label>
                <input class="form-control" type="text" id="Description" name="Description">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="About">About</label>
                <input class="form-control" type="text" id="About" name="About">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Name">Name</label>
                <input class="form-control" type="text" id="Name" name="ItemDetails.Name">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Size">Size</label>
                <input class="form-control" type="text" id="Size" name="ItemDetails.Size">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Colour">Colour</label>
                <input class="form-control" type="text" id="Colour" name="ItemDetails.Colour">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Price">Price</label>
                <input class="form-control" type="number" id="Price" name="ItemDetails.Price">
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
       </form>
   </div>
</div>