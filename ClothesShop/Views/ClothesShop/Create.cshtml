@using ClothesShop.Application.ClothesShop;
@model ClothesShopDto;

<h1>Create Clothes Shop</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/ClothesShop/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Brand">Brand</label>
                <input class="form-control" type="text" asp-for="Brand">
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="About">About</label>
                <input class="form-control" type="text" asp-for="About">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Size">Size</label>
                <input class="form-control" type="text" asp-for="Size">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Colour">Colour</label>
                <input class="form-control" type="text" asp-for="Colour">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Price">Price</label>
                <input class="form-control" type="number" asp-for="Price">
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}